<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Firebase">

    <AutoCompleteTextView

        android:id="@+id/editTextTextName"
        android:background="@drawable/bala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select a butterfly"
        android:completionThreshold="1"
        android:padding="20dp"
        android:ems="10"
        android:inputType="textPersonName"/>


    <Button
        android:background="@drawable/bala2"
        android:layout_below="@id/lin2"
        android:id="@+id/bt_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Location"/>

    
    <LinearLayout
        android:padding="10dp"
        android:id="@+id/lin2"
        android:layout_below="@id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/text_view1"
            android:hint="0.000000"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:gravity="center"
            android:hint="0.000000"
            android:id="@+id/text_view2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout

        android:layout_below="@+id/editTextTextName"
        android:id="@+id/lin0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <TextView
            android:gravity="center"
            android:id="@+id/timeTextView"
            android:hint="00:00"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:gravity="center"
            android:hint="MM/DD/YYYY"
            android:id="@+id/dateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout

        android:layout_below="@+id/lin0"
        android:id="@+id/lin01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <Button
            android:text="Pick a time"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bala2"
            android:id="@+id/timeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:text="pick a date"
            android:layout_marginStart="5dp"
            android:background="@drawable/bala2"
            android:id="@+id/dateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout

        android:layout_below="@+id/lin01"
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">
        <TextView
            android:gravity="center"
            android:id="@+id/text_view3"
            android:text="Longitude :"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:gravity="center"
            android:id="@+id/text_view4"
            android:text="Latitude :"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout

        android:layout_below="@+id/bt_location"

        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <EditText

            android:padding="20dp"
            android:id="@+id/notice1"
            android:hint="Leave a note here"
            android:background="@drawable/bala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/floating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">
        
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:id="@+id/bt_float"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_list"/>
        
        
    </LinearLayout>




    <Button
        android:background="@drawable/bala2"
        android:id="@+id/button"
        android:layout_below="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="341dp"
        android:layout_marginTop="25dp"/>
    
</RelativeLayout>