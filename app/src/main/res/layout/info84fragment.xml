                android:layout_marginLeft="5dp"/>
        </RelativeLayout>
        /////////////////////////////////////SINHALA NAME///////////////////////////
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:background="@drawable/bala"
            android:radius="10dp">
